<form method="post">
        @{  int count = 0;
            foreach (var vaccine in Model)
                count++;
          }
        @{count = count + 1;}
              

    <input type="hidden" name="Id" value=@count />
    <input type="hidden" name="TotalDosesReceived" value=0 />
    <input type="hidden" name="TotalDosesLeft" value=0 />
    <table border='1'>


        <tr><th>Name:</th><td><input type="text" name="Name" /></td></tr>
        <tr><th>Doses Required:</th><td>
            
            <select name="DosesRequired">{
                    <option value=1>1</option>
                    <option value=2>2</option>
                    <option value=3>3</option>
                    <option value=4>4</option>
                    <option value=4>5</option>
            }</select></td></tr>

        <tr><th>Days Between Doses:</th><td><input type="number" name="DaysBetweenDoses" /></td></tr>




    </table>
    <button>Add</button>
</form>
